<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="7dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/effect_card"
            android:layout_width="match_parent"
            app:mrl_rippleOverlay="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70">

                    <ImageView
                        android:id="@+id/imag_cafe_show"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        />
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="20dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            />

                    </android.support.v7.widget.CardView>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="0dp"
                        android:elevation="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/aksiya_star" />

                    <TextView
                        android:id="@+id/aksiya_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="25dp"
                        android:elevation="7dp"
                        android:rotation="325"
                        android:text="-20%"
                        android:textColor="@android:color/white"
                        android:textSize="19dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cafe_name_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="Burger King"
                            android:textColor="@android:color/black"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginTop="1dp"
                                android:layout_alignLeft="@+id/card"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/clock_icon"
                                android:tint="@android:color/darker_gray" />


                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical"
                                android:padding="2dp"
                                android:text="09:00-22:30"
                                android:textSize="14dp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:orientation="horizontal"
                        android:weightSum="90">

                        <ImageView
                            android:id="@+id/cafe_star_image1_show"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/cafe_star_image2_show"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/cafe_star_image3_show"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/cafe_star_image4_show"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/cafe_star_image5_show"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/star_icon" />

                        <TextView
                            android:id="@+id/zakaz_ot"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="Заказ от "
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_zakaz"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="500 TMT"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  -  "

                            />

                        <TextView
                            android:id="@+id/place"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:gravity="center_vertical"
                            android:text="Aşgabat şäheri"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>